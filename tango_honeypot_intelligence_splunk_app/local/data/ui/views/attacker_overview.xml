<form>
  <label>Attack Overview</label>
  <description>Provides statistics on the sources and locations of the attackers</description>
  <fieldset submitButton="false">
    <input type="time" token="field1" searchWhenChanged="true">
      <label></label>
      <default>
        <earliest>-12h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Login Attempts vs Successes</title>
      <chart>
        <search>
          <query>index=honeypot | timechart count by eventtype usenull=F</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">area</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">bottom</option>
      </chart>
    </panel>
    <panel>
      <title>Latest Successful Logins</title>
      <table>
        <search>
          <query>index=honeypot eventtype=login_success | iplocation prefix=iploc_ allfields=true src_ip | table src_ip, iploc_Country, _time| fields - percent | eval src_ip_country_name = if(isnull(iploc_Country),"Unknown",iploc_Country) | eval Time=strftime(_time,"%m/%d/%y %H:%M:%S")  | rename src_ip AS "Source IP" count as "Count" src_ip_country_name AS "Country" Time AS "Login Time" iploc_Country AS "Country"| fields - _time | sort 10 "Login Time"</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
    <panel>
      <title>Attackers Logging Into Multiple Sensors</title>
      <table>
        <search>
          <query>index=honeypot eventtype=login_success | stats dc(host) AS count, values(host) AS Sensors by src_ip | where count &gt; 1 | sort 10 - count | rename src_ip AS "Attacker IP" | fields - count | rename "Sensors" AS "Sensors Logged Into"</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="wrap">true</option>
        <option name="rowNumbers">false</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">cell</option>
        <option name="count">10</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Failed Login Attempts</title>
      <single>
        <search>
          <query>index=honeypot eventtype=login_attempt | stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="afterLabel">Failed Login Attempts</option>
        <option name="beforeLabel">There Were</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <title>Successful Logins</title>
      <single>
        <search>
          <query>index=honeypot "login attempt" "succeeded" | stats count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="afterLabel">Successful Logins</option>
        <option name="beforeLabel">There Were</option>
        <option name="linkView">search</option>
      </single>
    </panel>
    <panel>
      <title>Distinct Attacker IP Addresses</title>
      <single>
        <search>
          <query>index=honeypot | stats dc(src_ip)</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="underLabel">IP Addresses</option>
        <option name="linkView">search</option>
      </single>
    </panel>
  </row>
</form>